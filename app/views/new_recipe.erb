<h3>Add a Recipe</h3>
<form action="/recipes" method="post">
  <div>
    <label>Name</label>
    <input type="text" name="name">
  </div>
  <div>
    <label>Ingredients</label>
    <input type="text" name="ingredients">
  </div>
  <div>
    <label>Cook Time</label>
    <input type="text" name="cook_time">
  </div>
  <button>Submit</button>
</form>
