<form class="" action="/recipes/<%=@recipe.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="name">Name</label><br>
  <input type="text" name="name" value="<%=@recipe.name%>"><br>
  <label for="ingredients">Ingredients</label><br>
  <input type="text" name="ingredients" value="<%=@recipe.ingredients%>"><br>
  <label for="Cook time">Cook time</label><br>
  <input type="text" name="cook_time" value="<%=@recipe.cook_time%>"><br>
  <input id="submit" type="submit" name="submit" value="Submit">
</form>
